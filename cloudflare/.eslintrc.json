{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"], // 强制使用分号
        "quotes": ["error", "double"], // 强制使用双引号
        "indent": ["error", 4], // 强制使用 4 个空格缩进
        "no-unused-vars": ["warn"], // 警告未使用的变量
        "no-console": "off", // 允许使用 console
        "eqeqeq": ["error", "always"], // 强制使用 === 和 !==
        "curly": ["error", "all"] // 强制使用大括号
    }
}